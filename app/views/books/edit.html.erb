<h1>Editing Book</h1>

<%= form_with model: @book , url: book_path(@book.id), method: :patch do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %><br>

 <%= f.submit 'Update Book' %><br>
 
 <tr>
<td><%= link_to 'Show' , book_path(@book.id) %></td>     
<td><%= link_to 'Back' , books_path %></td>

</tr>
<% end %>

